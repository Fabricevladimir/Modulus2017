<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<android.support.design.widget.TabLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                >

  <android.support.design.widget.TabItem
      android:text="Breakfast"
                    />

  <android.support.design.widget.TabItem
      android:text="Lunch and Dinner"
                    />

</android.support.design.widget.TabLayout>
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/FourWindsAnimateViewGroup"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            >
            <!--android:animateLayoutChanges="true"-->

            

            <!-- LINE 1 -->
            <TextView
                android:id="@+id/line1"
                android:text="1 - Breakfast Bar"
                style="@style/ModFoodHeader"
                android:clickable="true"
                />

            <include
                android:id="@+id/Line1RecyclerView"
                layout="@layout/BaseRecyclerView"
                />

            <View style="@style/ModFoodMenuSpacing"/>

            <!-- LINE 2 -->
            <TextView
                android:id="@+id/line2"
                style="@style/ModFoodHeader"
                android:text="2 - Contental Breakfast"
                android:clickable="true"
                />

            <include
                android:id="@+id/Line2RecyclerView"
                layout="@layout/BaseRecyclerView"
                />

            <View style="@style/ModFoodMenuSpacing"/>

            <!-- LINE 3 -->
            <TextView
                android:id="@+id/line3"
                style="@style/ModFoodHeader"
                android:text="3 - Mega Cereal Bar"
                android:clickable="true"
                />

            <include
                android:id="@+id/Line3RecyclerView"
                layout="@layout/BaseRecyclerView"
                />

            <View style="@style/ModFoodMenuSpacing"/>

            <!-- LINE 4 -->
            <TextView
                android:id="@+id/line4"
                style="@style/ModFoodHeader"
                android:text="4 - Country Cooking"
                android:clickable="true"
                />

            <include
                android:id="@+id/Line4RecyclerView"
                layout="@layout/BaseRecyclerView"
                />

            <View style="@style/ModFoodMenuSpacing"/>

            <!-- LINE 5 -->
            <TextView
                android:id="@+id/line5"
                style="@style/ModFoodHeader"
                android:text="5 - Breakfast Bar"
                android:clickable="true"
                />

            <include
                android:id="@+id/Line5RecyclerView"
                layout="@layout/BaseRecyclerView"
                />

            <View style="@style/ModFoodMenuSpacing"/>

            <!-- LINE 6 -->
            <TextView
                android:id="@+id/line6"
                style="@style/ModFoodHeader"
                android:text="6 - Healthy Choices"
                android:clickable="true"
                />

            <include
                android:id="@+id/Line6RecyclerView"
                layout="@layout/BaseRecyclerView"
                />

            <View style="@style/ModFoodMenuSpacing"/>

            <!-- LINE 7 -->
            <TextView
                android:id="@+id/line7"
                style="@style/ModFoodHeader"
                android:text="7 - Pancake and Waffle Bar"
                android:clickable="true"
                />

            <include
                android:id="@+id/Line7RecyclerView"
                layout="@layout/BaseRecyclerView"
                />

        </LinearLayout>
    
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>