<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:cardview="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center_horizontal"
  cardview:cardElevation="4dp"
  cardview:cardCornerRadius="5dp"
  android:layout_marginBottom="16dp"
  cardview:cardBackgroundColor="?attr/modCardBackgroundColor"
  android:id="@+id/studentScheduleEvent"
  >

    <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="3">

        <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:text="8:00 - 8:50"
        android:background="@color/primary"
        android:textSize="24dp"
        android:textColor="@color/accent"
        android:padding="8dp"
        android:gravity="center"
        android:id="@+id/studentScheduleEventTime"
        />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/modCardBackgroundColor">

            <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Event Title"
            style="@style/ModListItemPrimaryText"
            android:padding="8dp"
            android:id="@+id/studentScheduleEventTitle"
            />

            <TextView
            style="@style/ModListItemSecondaryText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Event location"
            android:layout_weight="2"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/studentScheduleEventDescription"
            />
            </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


