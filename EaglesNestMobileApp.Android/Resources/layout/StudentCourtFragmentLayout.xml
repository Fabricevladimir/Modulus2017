<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:background="@color/bright_green">
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_horizontal"
      cardview:cardElevation="4dp"
      cardview:cardCornerRadius="5dp"
      cardview:cardBackgroundColor="@color/lighter_grey">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">
      
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="#333333"
          android:text="Status"
          android:id="@+id/studentCourtBanner"
          android:gravity="center_horizontal"
          android:layout_marginLeft="5dp"
          android:textSize="30dp"
         />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:text="Status"
        android:id="@+id/studentCourtStatus"
        android:gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:textSize="30dp"
       />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"     
        android:text="You are no required to go to student court"
        android:id="@+id/infraction1"
        android:gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
       
        android:layout_below="@+id/studentCourtStatus"
      />
     
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>