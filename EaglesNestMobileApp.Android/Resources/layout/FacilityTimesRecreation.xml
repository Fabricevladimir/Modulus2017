<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- TOOLBAR -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/ToolbarDialogLayout"
        />

    <!-- SCROLLVIEW -->
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp"
            >

            <!-- ********************************************************************** -->
            <!-- CARD SEPARATOR -->
            <!-- ********************************************************************** -->
            <!-- 2. Sports Center BUILDING -->

            <!-- Sports Center Building Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="Sports Center"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                      />

            <!-- Sports Center Building CardView -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                      >

                <!-- Sports Center Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                          >

                    <!-- Sports Center General Button -->
                    <Button
                        android:id="@+id/SportsCenterGeneral"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Sports Center General"
                        android:gravity="left"
                              />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Water Park (Men) Button -->
                    <Button
                        android:id="@+id/WaterParkMen"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Water Park (Men)"
                        android:gravity="left"
                              />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Water Park (Women) Button -->
                    <Button
                        android:id="@+id/WaterParkWomen"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Water Park (Women)"
                        android:gravity="left"
                              />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Weight Room (Women) Button -->
                    <Button
                        android:id="@+id/WeightRoomWomen"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Weight Room (Women)"
                        android:gravity="left"
                              />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- ********************************************************************** -->
            <!-- CARD SEPARATOR -->
            <!-- ********************************************************************** -->
            <!-- 2. Swim Center BUILDING -->

            <!-- Swim Center Building Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="Swim Center"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                      />

            <!-- Swim Center Building CardView -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                      >

                <!-- Swim Center Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                          >

                    <!-- Swim Center (Men) Button -->
                    <Button
                        android:id="@+id/SwimCenterMen"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Swim Center (Men)"
                        android:gravity="left"
                              />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Swim Center (Women) Button -->
                    <Button
                        android:id="@+id/SwimCenterWomen"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Swim Center (Women)"
                        android:gravity="left"
                              />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- ********************************************************************** -->
            <!-- CARD SEPARATOR -->
            <!-- ********************************************************************** -->
            <!-- 2. Field House BUILDING -->

            <!-- Field House Building Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="Field House"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                      />

            <!-- Field House Building CardView -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                      >

                <!-- Field House Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                          >

                    <!-- Field House Button -->
                    <Button
                        android:id="@+id/FieldHouseMen"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Field House (Men)"
                        android:gravity="left"
                              />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>