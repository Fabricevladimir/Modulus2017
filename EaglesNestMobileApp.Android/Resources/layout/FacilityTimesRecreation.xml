<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- TOOLBAR -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/ToolbarDialogLayout"
        />

    <!-- SCROLLVIEW -->
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:card_view="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:paddingTop="8dp"
            >

          <!-- ********************************************************************** -->
          <!-- CARD SEPARATOR -->
          <!-- ********************************************************************** -->
          <!-- 2. Crown Centre BUILDING -->

          <!-- Crown Centre Building Title -->
          <TextView
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              style="@style/ModRobotoRegularSoft20"
              android:text="Crown Centre"
              android:layout_marginTop="0dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="8dp"
              android:layout_marginBottom="8dp"
                      />

          <!-- Crown Centre Building CardView -->
          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
              card_view:cardElevation="2dp"
              card_view:cardUseCompatPadding="false"
              android:layout_marginTop="0dp"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginBottom="16dp"
                      >

              <!-- Crown Centre Layout -->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                          >

                  <!-- Crown Centre Button -->
                  <Button
                      android:id="@+id/CrownCentre"
                      android:textColor="?attr/modBorderlessButtonFullSpanColor"
                      style="@style/ModBorderlessButtonFullSpan"
                      android:text="Crown Centre"
                      android:gravity="left"
                              />

                  <!-- Divider Line -->
                  <View style="@style/ModDivider" />

              </LinearLayout>

          </android.support.v7.widget.CardView>

          <!-- ********************************************************************** -->
          <!-- CARD SEPARATOR -->
          <!-- ********************************************************************** -->
          <!-- 2. DHA BUILDING -->

          <!-- DHA Building Title -->
          <TextView
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              style="@style/ModRobotoRegularSoft20"
              android:text="DHA"
              android:layout_marginTop="0dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="8dp"
              android:layout_marginBottom="8dp"
                      />

          <!-- DHA Building CardView -->
          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
              card_view:cardElevation="2dp"
              card_view:cardUseCompatPadding="false"
              android:layout_marginTop="0dp"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginBottom="16dp"
                      >

              <!-- DHA Layout -->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                          >

                  <!-- DHA Button -->
                  <Button
                      android:id="@+id/DHA"
                      android:textColor="?attr/modBorderlessButtonFullSpanColor"
                      style="@style/ModBorderlessButtonFullSpan"
                      android:text="DHA"
                      android:gravity="left"
                              />

                  <!-- Divider Line -->
                  <View style="@style/ModDivider" />

              </LinearLayout>

          </android.support.v7.widget.CardView>

      </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>