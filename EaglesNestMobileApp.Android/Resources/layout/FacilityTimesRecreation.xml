<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- TOOLBAR -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/ToolbarDialogLayout"
        />

    <!-- SCROLLVIEW -->
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp"
            >

            <!-- 1. MACKENZIE BUILDING -->

            <!-- MacKenzie Building Title -->
            <!--android:id="@+id/"-->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="MacKenzie Building"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                />

            <!-- MacKenzie Building CardView -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                >

                <!-- MacKenzie Building Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <!-- Classrooms Button -->
                    <Button
                        android:id="@+id/MKClassrooms"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Classrooms, 1–6 Fls"
                        android:gravity="left"
                        />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Classrooms Button -->
                    <Button
                        android:id="@+id/MKLabs"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Nursing/Computer Lab, 3rd and 5th Fls"
                        android:gravity="left"
                        />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Classrooms Button -->
                    <Button
                        android:id="@+id/MKPlanetarium"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Planetarium, 6th Fl"
                        android:gravity="left"
                        />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>