<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/class1Attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Class 1"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/class1AttendanceUnexcused"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unexcused Absences"        
        />

    <TextView
            android:id="@+id/class1AttendancePendingUnexcused"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending Unexcused Absences"
        />

<TextView
        android:id="@+id/class1AttendanceTardies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tardies"        
        />

    <TextView
            android:id="@+id/class1AttendancePendingTardies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending Tardies"
        />
    <android.support.v7.widget.CardView
    
/>
    

</LinearLayout>
