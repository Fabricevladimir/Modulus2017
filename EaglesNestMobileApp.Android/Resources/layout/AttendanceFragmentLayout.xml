<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!-- The class title-->
    <TextView
        android:id="@+id/attendanceClassName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Class 1"
        android:textSize="16dp" />
<!-- the overall box for the entire 4 stubs-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <!-- Stub 1 Unexcused Absences-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/attendanceClassUnexcused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unexcused Absences"
                    android:clickable="true" />
                <TextView
                    android:id="@+id/attendanceClassUnexcusedNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:layout_marginRight="64dp" />
            </LinearLayout>
        <!-- This will need to become a recycler view - The list of unexcused absences-->
           
        <!-- Stub 2 Pending Unexcused abscences-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/class1AttendancePendingUnexcused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Unexcused Absences"
                    android:clickable="true" />
                <TextView
                    android:id="@+id/numberOfSkipwws"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:layout_marginRight="64dp" />
            </LinearLayout>
        <!-- This will need to become a recycler view - The list of pending unexcused absences-->
            
        <!-- stub 3 Tardies-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/class1AttendanceTardies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tardies" />
                <TextView
                    android:id="@+id/numberOfSkipsdgh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:layout_marginRight="64dp" />
            </LinearLayout>
        <!-- Stub 4 Pending Tardies-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/class1AttendancePendingTardies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Tardies" />
                <TextView
                    android:id="@+id/numberOfSkipser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:layout_marginRight="64dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>