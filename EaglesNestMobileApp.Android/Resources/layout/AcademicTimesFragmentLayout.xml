<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
  <!-- ScrollView can only have ONE direct child -->

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:card_view="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingTop="8dp"
        >


    <!-- 1. ACADEMIC INFO -->
    <!-- Academic Info Title-->


    <android.support.v7.widget.CardView
        android:id="@+id/AcademicInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="false"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
            >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:padding="16dp"
                >
        
        <!-- General Location View -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/ModRobotoMedium20"
            android:text="Academic Center"
                    />

        <!-- Specific Location View -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/ModListItemPrimaryText"
            android:text="Academic Center Computer Labs"
                    />

        <!-- Sunday View -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/ModListItemSecondaryText"
            android:text="Sun: Closed"
                    />

        <!-- Monday View -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/ModListItemSecondaryText"
            android:text="Mon: 7:30am-10:00pm"
                    />
        
        <!-- Tuesday View -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/ModListItemSecondaryText"
            android:text="Tue: 7:30am-10:00pm"
                    />
        
        <!-- Wednesday View -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/ModListItemSecondaryText"
            android:text="Wed: 7:30am-6:30pm, 8:15pm-10:00pm"
                    />
        
        <!-- Thursday View -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/ModListItemSecondaryText"
            android:text="Thu: 7:30am-10:00pm"
                    />
        
        <!-- Friday View -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/ModListItemSecondaryText"
            android:text="Fri: 7:30am-10:00pm"
                    />
        
        <!-- Saturday View -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/ModListItemSecondaryText"
            android:text="Sat: 8:30am-10:00pm"
                    />

      </LinearLayout>

    </android.support.v7.widget.CardView>
  </LinearLayout>

</android.support.v4.widget.NestedScrollView>
