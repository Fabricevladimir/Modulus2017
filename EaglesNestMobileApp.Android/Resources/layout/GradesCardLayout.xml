<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grades_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="false"
    android:layout_marginBottom="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        >
        
        <!-- COURSE NAME -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/GradesCardClassName"
            android:padding="16dp"
            style="@style/ModRobotoRegular20"
            />

        <!-- CUMULATIVE GRADE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            >

            <!-- Cumulative Grade Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                style="@style/ModListItemPrimaryText"
                android:text="Cumulative Grade:"
                />

            <!-- Cumulative Grade Data-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                style="@style/ModRobotoRegular20"
                android:text="A+"
                />
        
        </LinearLayout>
        
        <!-- Divider Line -->
        <View style="@style/ModDivider" />

        <!-- TEACHER INFO BUTTON -->
        <Button
            android:textColor="?attr/modBorderlessButtonFullSpanColor"
            style="@style/ModBorderlessButtonFullSpan"
            android:text="Teacher Info"
            />

        <!-- Divider Line -->
        <View style="@style/ModDivider" />
            
        <!-- COURSE GRADE -->
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="A+"
            android:padding6="16dp"
            />-->
            <!--style="@style/ModListItemSecondaryText"-->
        
        <!-- TEACHER INFO -->
        <!--<Button
            android:id="@+id/TeacherInfoButton"
            android:textColor="?attr/colorPrimary"
            android:text="TEACHER INFO"
            style="@style/ModBorderlessButton"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toLeftOf="@+id/ShowGradesButton"
            />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            >
            
            <!-- SHOW GRADES TEXT -->
            <Button
                android:id="@+id/ShowGradesButton"
                android:textColor="?attr/colorPrimary"
                android:text="SHOW GRADES"
                style="@style/ModBorderlessButton"
                android:gravity="left"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                    />

            <!-- SHOW GRADES ARROW -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="^"
                    />

        </LinearLayout>
        
        <!-- EXPANDING ASSIGNMENTS AREA -->
        <LinearLayout
            android:id="@+id/llExpandArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade 1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade 2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade 3"
                />
            <!--<android.support.v7.widget.RecyclerView
                android:id="@+id/AssignmentsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingTop="0dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:nestedScrollingEnabled="false"
                />-->
        
        </LinearLayout>
            
    </LinearLayout>

</android.support.v7.widget.CardView>
