<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grades_card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    >
    <!-- card_view:cardUseCompatPadding="true" //Took this out because it
            would not allow card to expand completely to edges of screen -->
    <!-- cardElevation="2dp" is MD resting elevation for a card -->
    <!-- margins for CardView work only when used with RecyclerView -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CardImage"
            android:adjustViewBounds="true"
            />-->
        <!-- adjustViewBounds gets rid of unnecessary top/bottom padding -->

        <!--<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >-->

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/GradesCardClassName"
                android:textSize="20sp"
                android:padding="16dp"
                />
            <!-- android:layout_width has to be set to 0dp in order
                     for android:layout_width to work properly -->
            <!-- CHANGE THESE TEXTVIEWS TO ACTION BUTTONS WITH 14pt FONT -->

            <Button
                android:id="@+id/SignUpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ShareButton"
                android:textColor="@color/primary"
                android:text="SIGNUP"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <!-- FIGURE OUT LATER HOW TO CHANGE BUTTON PADDING -->

            <Button
                android:id="@+id/ShareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/primary"
                android:text="SHARE"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <!-- MD padding for ACTION buttons is 8dp internal padding
                     and 8dp external padding -->

        <!--</RelativeLayout>-->

    </LinearLayout>

</android.support.v7.widget.CardView>
