<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  
  <!-- This is the 7 day layout that is always going to be there -->
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="34dp"
    android:layout_marginTop="10dp">

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
     android:layout_margin="8dp"
      android:layout_weight="1"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
    android:layout_margin="8dp"
      android:layout_weight="1"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
     android:layout_margin="8dp"
      android:layout_weight="1"

      />
   
    </LinearLayout>
  
  
  <!-- The is going to be the date header-->
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Monday"
      android:id="@+id/studentScheduleDay"
      android:gravity="center_horizontal"
      android:layout_marginLeft="5dp"
      android:textSize="30dp" />
  <View
      style="@style/ModTextViewUnderline"
      android:layout_marginBottom="8dp"
    />
  
  <!-- This is to be recycled -->





  <android.support.v7.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         cardview:cardElevation="4dp"
         cardview:cardCornerRadius="5dp"
         cardview:cardBackgroundColor="?attr/modCardBackgroundColor"
       >
       
  
    <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="3">

      <TextView
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  android:layout_weight="2"
  android:text="8:00 - 8:50"
  android:background="@color/primary"
  android:textSize="24dp"
  android:textColor="@color/accent"
  android:padding="8dp"
  android:gravity="center"
          />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/modCardBackgroundColor">
        
       <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="Event Title"
        style="@style/ModListItemPrimaryText"
        android:layout_margin="8dp"
          />

        <TextView
          style="@style/ModListItemSecondaryText"
          android:layout_height="wrap_content"
        android:layout_width="match_parent"
          android:text="Event locationrdsrthyjeouihbrghjubrouhjberuohberuihbreiuoheriuoherouiherouhgberuoyhgbrfeuoyhgbruoyuoygruhgfoiurhipuhripuhriouheriouhrefoiuherfiouhrefoiuheroiuhrefoiuhrfeoiuhrfouhbrouhrfouhrfouihrfuohrfouihrfoiuhouihroiuhroiuhroiuhroiuhroiuhrouhbfouihbfb"
          android:layout_weight="2"
          />
      
        
  
  
      </LinearLayout>    
        
  
   

    </LinearLayout>
  </android.support.v7.widget.CardView>
    
</LinearLayout>
