<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  
  <!-- This is the 7 day layout that is always going to be there -->
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="34dp"
    android:layout_marginTop="10dp">

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/Sunday"
      android:tag="Sunday"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
     android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/Monday"
      android:tag="Monday"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/Tuesday"
      android:tag="Tuesday"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
    android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/Wednesday"
      android:tag="Wednesday"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/Thursday"
      android:tag="Thursday"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/Friday"
      android:tag="Friday"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/Saturday"
      android:tag="Saturday"
      />
   
    </LinearLayout>
  
  
  <!-- The is going to be the date header-->
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Sunday"
      android:id="@+id/StudentScheduleDay"
      android:gravity="center_horizontal"
      android:layout_marginLeft="5dp"
      android:textSize="30dp" />
  <View
      style="@style/ModTextViewUnderline"
      android:layout_marginBottom="8dp"
    />
  
  <!-- This is to be recycled -->
  <android.support.v7.widget.RecyclerView
      android:id="@+id/StudentScheduleRecyclerview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clipToPadding="false"
      android:paddingTop="0dp"
      android:paddingRight="16dp"
      android:paddingLeft="16dp"
      android:paddingBottom="16dp"
      android:nestedScrollingEnabled="false"
                />
</LinearLayout>



  