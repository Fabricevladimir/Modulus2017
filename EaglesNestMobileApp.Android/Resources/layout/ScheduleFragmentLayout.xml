<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  
  <!-- This is the 7 day layout that is always going to be there -->
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="34dp"
    android:layout_marginTop="10dp">

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/StudentScheduleSundayButton"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
     android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/StudentScheduleMondayButton"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/StudentScheduleTuesdayButton"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
    android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/StudentScheduleWednesdayButton"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/StudentScheduleThursdayButton"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
      android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/StudentScheduleFridayButton"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/studentSchedule_dateButton"
     android:layout_margin="8dp"
      android:layout_weight="1"
      android:id="@+id/StudentScheduleSaturdayButton"
      />
   
    </LinearLayout>
  
  
  <!-- The is going to be the date header-->
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Monday"
      android:id="@+id/studentScheduleDay"
      android:gravity="center_horizontal"
      android:layout_marginLeft="5dp"
      android:textSize="30dp" />
  <View
      style="@style/ModTextViewUnderline"
      android:layout_marginBottom="8dp"
    />
  
  <!-- This is to be recycled -->

</LinearLayout>



  