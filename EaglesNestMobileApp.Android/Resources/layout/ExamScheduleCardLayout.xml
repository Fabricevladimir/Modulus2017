<?xml version="1.0" encoding="utf-8" ?>
  <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/exam_time_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardBackgroundColor="?attr/modCardBackgroundColor"
        cardview:cardElevation="2dp"
        cardview:cardUseCompatPadding="false"
        android:layout_marginBottom="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:layout_marginBottom="8dp"
            >

            <TextView
                android:id="@+id/examClassNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
              
                android:textSize="24dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/examClassName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:id="@+id/examDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue. May 1"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    />

                <TextView
                    android:id="@+id/examTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  
                    android:textSize="15dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/examRoomLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>