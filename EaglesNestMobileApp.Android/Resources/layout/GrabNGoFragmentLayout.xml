<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <android.support.design.widget.TabLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/GrabAndGoTabLayout"
                >

    <android.support.design.widget.TabItem
        android:text="Lunch"
                    />

    <android.support.design.widget.TabItem
        android:text="Dinner"
                    />

  </android.support.design.widget.TabLayout>
  <android.support.v4.widget.NestedScrollView
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      android:orientation="vertical"
      >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:animateLayoutChanges="true"
      android:orientation="vertical">

      <TextView
        android:id="@+id/grabNGoOption1"
        android:text="1 - Garden Salad Shaker Meal"
        style="@style/ModFoodLineHeader"
        android:clickable="true"
              />
      <include
                android:id="@+id/GrabAndGoLine1"
                layout="@layout/BaseRecyclerView"
                />

      <TextView
        android:id="@+id/grabNGoOption2"
        android:text="2 - Chicken Ciabatta Meal"
        style="@style/ModFoodLineHeader"
        android:clickable="true"
              />
      <include
                android:id="@+id/GrabAndGoLine2"
                layout="@layout/BaseRecyclerView"
                />

      <TextView
        android:id="@+id/grabNGoOption3"
        android:text="3 - PBJ Strawberry Meal"
        style="@style/ModFoodLineHeader"
        android:clickable="true"
              />
      <include
                android:id="@+id/GrabAndGoLine3"
                layout="@layout/BaseRecyclerView"
                />

      <TextView
        android:id="@+id/grabNGoOption4"
        android:text="4 - Corn Dog Meal"
        style="@style/ModFoodLineHeader"
        android:clickable="true"
              />
      <include
                android:id="@+id/GrabAndGoLine4"
                layout="@layout/BaseRecyclerView"
                />
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>
</LinearLayout>
